<section class="content-header">
  <%= link_to 'Back', productcategories_path,:class =>"btn btn-primary pull-right" %>
  <h1>Product Category Details</h1>
</section>
<section class="content">
  <div class="row">
    <div class="col-xs-12">
      <div class="box">
        <div class="box-body form-horizontal">
        <div class="row">
          <div class="form-group">  
            <label class="col-sm-4 text-right"><%= notice   %></label>
          </div>
          
            <div class="col-xs-8">
              <div class="form-group">  
                <label class="col-sm-4 text-right">Name:</label>
                <div class="col-sm-7">
                  <%= @productcategory.name %>
                </div>
                <div class="col-sm-1">
                   <%= link_to 'Edit', edit_productcategory_path(@productcategory),:class =>"btn btn-primary" %>
                </div>
              </div>
            </div>
        </div>
      </div>
    </div>
  </div>
</section>
